    <div class="fluid-container" id="myContainer">
    <div class="container">

       <img src="./assets/img/oBB.png" class="img-fluid titleBurger" alt="ohBadBurger">
        
        <div class="row">
            <div class="col-6 px-md-4">


<!---Form Container -->

                <div class="row newBurger align-middle">
                    <div class="col-md-10" >
                      <p># # Please select below your key burger features # #</p>
                        <h5 class="titles">Oh!Bad Fillet Patties</h5>
                        <select id="inputPatty" class="form-control dropBox">
                          <option selected value="0"></option>
                            {{#each ingredient}}
                              {{#if patty}}
                                <option value="{{this.id}}" name="patty" id="patty{{this.id}}">{{this.name}}</option>
                              {{/if}}
                            {{/each}}
                          </select>
                      </div>
                    <div class="col-md-10">
                        <h5 class="titles">HomeBrew Sauce</h5>
                        <select id="inputSauce" class="form-control dropBox">
                            <option selected value="0"></option>
                            {{#each ingredient}}
                              {{#if sauce}}
                               <option value="{{this.id}}" name="sauce" id="sauce{{this.id}}">{{this.name}}</option>
                             {{/if}}
                            {{/each}}
                        </select>
                    </div>
                    <fieldset class="col-md-12">
                        <div class="row">
                            <legend class="col-md-12 titles">Toppings</legend>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                              {{#each ingredient}}
                              {{#if topping}}
                                    <div class="form-check form-check-inline">
                                    <input class="form-check-input topping" type="checkbox" id="top{{this.id}}"
                                        value="{{this.id}}" name="topping" onchange="check_value({{this.id}},this)">
                                    <label class="form-check-label" for="{{this.name}}ID">{{this.name}}</label>
                                </div>                             
                             {{/if}}
                            {{/each}}
                            </div>
                        </div>
                    </fieldset>
                    <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                             <form class="newBurger" action="/newburger" method="POST">
                              <h5 class="titles"</h5>Burger Name</h5>
                            <input type="text" id="BurgerID" name="title" class="col-12">
                             <button type="submit" name="submitBtn" class="btn btn-primary addBurgerBtn" onclick="preventDoubleClick()">Submit</button>
                        </form>
                        </div>
                    </div>
            </div>
        </div> <!--- Last Row -->
</div>
<!---Builder Container -->
            <div class="col-6">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="buildTitle">Burger Image Builder</h2>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="list-group">
                                <li class="list-group-item float-left">
                                    Bun Top
                                    <div class="image-parent backImg float-right">
                                        <img src="./assets/img/bunTop.jpg" class="burgerImg" alt="Burger Top">
                                    </div>
                                  </li>
                                   {{#each ingredient}}
                                    <div id="img{{this.id}}" class="imgClear">
                                  <li class="list-group-item d-flex justify-content-between align-items-center">
                                   {{this.name}}
                                    <div class="image-parent backImg">
                                        <img src="./assets/img/{{this.id}}.jpg" class="burgerImg" alt="Burger bottom">
                                    </div>
                                  </li>
                                  </div>
                                    {{/each}}
                                  <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Bun Bottom
                                    <div class="image-parent backImg">
                                        <img src="./assets/img/bunBottom.jpg" class="burgerImg" style="width: 100% \9" alt="filling">
                                    </div>
                                  </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   </div>
    
    <!--End of Main Container-->

    <div class="container subContainer">
         <h5 class="titles">Awaiting CheckOut</h5>
        <ul>
           {{#each burger}}
        {{#if this.checkOut}}
              <li class="list-group-item"> 
        <div class="container">
            </div>
                 <div class="row">
                <div class="col">
                <span class="burgerID float-left">Id: {{this.burgerID}} </span>
                </div>
                <div class="col">
                <span class="title float-left">{{this.title}}</span> 
                </div>
                <div class="col">
                <span class="SpiceLvL float-left">SpiceLvL: {{this.spiceLvL}}SHU</span>
                </div>
                <div class="col">
                <span class="Price float-right">Price:${{this.price}}</span>
                </div>
                  <div class="col">
                <span class="Time float-right">Time:{{this.time}}</span>
                </div>
                <div class="col">
              <button data-id="{{this.burgerID}}" class="btn btn-success float-right  purchaseBtn">PURCHASE</button> 
              </div>
            </li>
        {{/if}}
   {{/each}}
        </ul>
    </div>
    <div class="container purContainer">
         <h5 class="titles">Purchase history</h5>
        <ul>
 {{#each burger}}
    {{#if this.purchased}}
        <li class="list-group-item"> 
        <div class="container">
          <div class="row">
              <div class="col">
                <span class="burgerID float-left">Id: {{this.burgerID}}</span>
                </div>
                <div class="col">
                <span class="title float-left">{{this.title}}</span> 
                </div>
                <div class="col">
                <span class="SpiceLvL float-left">SpiceLvL: {{this.spiceLvL}} </span>
                </div>
                <div class="col">
                <span class="Price float-right">Price: ${{this.price}}</span>
                </div>
                  <div class="col">
                <span class="Price float-right"> Time: {{this.time}} </span>
                </div>
                <div class="col">
              <button data-id="{{this.burgerID}}"class="btn btn-danger float-right delBtn">DELETE</button> 
            </div>
            </li>
       {{/if}}
  {{/each}}
        </ul>
    </div>
</div>


